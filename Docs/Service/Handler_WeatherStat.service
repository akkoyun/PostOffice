[Unit]
Description=PostOffice WeatherStat Data Handler Service
After=network.target

[Service]
WorkingDirectory=/root/PostOffice
ExecStart=/usr/bin/python3 /root/PostOffice/Handler/Handler_WeatherStat.py
StandardOutput=inherit
StandardError=inherit
Restart=always
User=root

[Install]
WantedBy=multi-user.target